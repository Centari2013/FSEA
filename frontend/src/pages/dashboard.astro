---
// Import necessary components and utilities here
import Layout from '../layouts/Layout.astro';
import { useState } from 'react';

// Placeholder data - you'll replace this with actual data fetching logic
const employeeInfo = {
  firstName: 'Jane',
  lastName: 'Doe',
  department: 'Research and Development',
  designations: ['Senior Researcher', 'Project Lead'],
  missions: ['Mission Mars', 'Mission Venus']
};
---


  <div class="employee-dashboard">
    <h1>Employee Dashboard</h1>
    <h2>Welcome, {employeeInfo.firstName} {employeeInfo.lastName}</h2>
    <p>Department: {employeeInfo.department}</p>
    <p>Designations: {employeeInfo.designations.join(', ')}</p>
    <h3>Missions Involved:</h3>
    <ul>
      {employeeInfo.missions.map((mission) => (
        <li>{mission}</li>
      ))}
    </ul>
  </div>

